{
  "version": 2,
  "builds": [
    {
      "src": "api/package.json",
      "use": "@vercel/node",
      "config": { "buildCommand": "npm run build" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/dist/index.js" },
    { "source": "/(.*)", "destination": "/frontend" }
  ]
}
